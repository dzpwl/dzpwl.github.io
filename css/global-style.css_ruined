/* Desktops and laptops ----------- */
@media only screen 
and (min-width : 1224px) {
  body {
    display: flex;
    flex-direction: column;
    width: 82vw;
    margin: 0;
  }

  a {
    background:
    linear-gradient(
    to right,
    rgba(255, 255, 255, 0),
    rgba(255, 255, 255, 0)
    ),
    linear-gradient(
    to right,
    rgba(var(--gradient-start)),
    rgba(var(--gradient-middle)),
    rgba(var(--gradient-end))
    );
    background-size: 100% 1px, 0 1px;
    background-position: 100% 100%, 0 100%;
    background-repeat: no-repeat;
    transition: background-size 400ms, color 400ms;
  }

  a:hover {
    color: var(--link-hl-color);
    background-size: 0 1px, 100% 1px;
    transition: background-size 400ms;
  }

  i {
    color: var(--link-fg-color);
    font-size: 20px;
    transition: all 400ms;
  }

  .nav {
    font-size: 1.3em;
  }

  .nav ul {
    display: flex;
  }

  .nav li {
    display: inline-flex;
    margin-left: auto;
    margin-right: auto;
    padding: 0 20px;
  }
  
  #intro {
    padding: 1em 5em;
    font-size: 1.1em;
  }

  #about {
    padding: 1em 5em;
    font-size: .9em;

  .content {
    width: 80vw;
    padding: 0 10em;
  }

  .sidebar {
    position: fixed;
    top: 0;
    right: 0;
    width: 18vw;
    height: 100%;
    padding-right: 5em;
    padding-top: 2em;
    padding-bottom: 2em; 
  }

  .blurb {
    text-align: left;
  }

  @keyframes pulse {
    from {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    to {
      transform: scale(1);
    }
  }
}

