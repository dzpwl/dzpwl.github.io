
*, *:before, *:after {
  box-sizing: border-box;
}

body {
  background: var(--main-bg-color);
  color: var(--main-fg-color);
  font-family: var(--main-font), var(--fallback-font), sans-serif;
  font-size: var(--base-font-size);
}

h1 {
  color: var(--h1-fg-color);
  text-align: center;
}

h3 {
  color: var(--h3-fg-color);
  text-align: center;
  font-size: 1.5em;
}

a {
  color: var(--link-fg-color);
  text-decoration: none;
}

p {
  line-height: 1.5em;
}

ul {
  list-style: none;
  padding: 0;
}

li:before {
  content: "";
}

li {
  padding: 2px 0;
  text-decoration: none;
}

blockquote {
  font-style: italic;
}

.sidebar {
    display: flex;
    flex-direction: column;
    font-size: .8em;
}

.blurb {
  font-family: var(--mono-font), monospace;
  font-weight: bold;
} 

